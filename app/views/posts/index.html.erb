<%= link_to "People App", people_path %>

<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Body</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.subject, person_post_path(@person, post.id), method: :get %></td>
        <td><%= post.body %></td>
        <td><%= post.date %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<ul>
  <li><%= link_to 'New Post', new_person_post_path(@person), method: :get %></li>
  <li id="backLink">Back</li>
</ul>
